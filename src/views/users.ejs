    <h1 class="display-2 text-center">Datos de usuarios</h1>
<!--datos de usuarios-->
<div class="container">
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Email</th>
            <th scope="col">Contrase√±a</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0; i<users.length; i++) {%>
            <tr>
                <td><%= users[i].name %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].password %></td>
                <td>
                    <a href="/users/<%= users[i]._id %>/edit" class="btn btn-primary">Editar</a>
                    <form action="/users/<%= users[i]._id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
